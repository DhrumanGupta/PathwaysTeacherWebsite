<style>

    @@media screen and (min-width: 1281px) {
        .table {
            width: 50%;
            height: 50%;
            min-height: 400px;
        }

        .grid-container {
            grid-template-columns: 1fr 1fr;
            grid-template-rows: 18% 82%;
            grid-template-areas: "header header" "left right";
        }
    }

    @@media screen and (max-width: 1280px) and (min-width:651px) {
        .table {
            width: 60%;
            height: 50%;
            min-height: 400px;
        }

        .grid-container {
            grid-template-columns: 1fr 1fr;
            grid-template-rows: 18% 82%;
            grid-template-areas: "header header" "left right";
        }
    }

    @@media screen and (max-width: 650px) {
        .table {
            width: 80%;
            height: 90%;
            min-height: 650px;
            margin-top: 10px !important;
            margin-left: auto !important;
        }

        .grid-container {
            grid-template-columns: 1fr;
            grid-template-rows: 1fr 6fr 6fr;
            grid-template-areas: "header" "left" "right";
        }
    }

    @@media screen and (max-height: 450px) {
        .table {
            margin-top: 10px !important;
            margin-left: auto !important;
        }
    }

    .table {
        background-color: #03786e;
        bottom: 0;
        left: 0;
        margin: auto;
        position: absolute;
        top: 0;
        right: 0;
        z-index: 1;
    }

    .grid-container {
        width: 100%;
        height: 100%;
        display: grid;
    }

    .table .table-header {
        font-family: Modern;
        color: white !important;
        grid-area: header;
        margin: auto;
        font-size: calc(16px + 6 * ((100vw - 250px) / 680));
    }

    .error-message {
        color: @TempData["Color"];
        text-shadow: 2px 2px 1px #333;
        font-family: Modern;
        font-size: calc(16px + 6 * ((100vw - 320px) / 6000)) !important;
    }

    .login {
        grid-area: left;
    }

    .register {
        grid-area: right;
    }

    .panel {
        display: flex;
        justify-content: center;
        align-items: center;
        background-color: white !important;
        font-family: Modern !important;
        width: 98%;
        height: 98%;
    }

    input[type="email"]::-webkit-input-placeholder {
        text-align: center;
        font-family: monospace;
        color: #CBC6C6;
    }

    input[type="password"]::-webkit-input-placeholder {
        text-align: center;
        font-family: monospace;
        color: #CBC6C6;
    }

    .roundedcorner {
        background: #fff;
        font-family: Modern;
        font-size: calc(16px + 6 * ((100vw - 320px) / 9000));
        margin-left: auto;
        margin-right: auto;
        margin-top: 1px;
        margin-bottom: 1px;
        padding: 3px;
        border-top: 1px solid #b5b5b5;
        border-left: 1px solid #b5b5b5;
        border-right: 1px solid #404040;
        border-bottom: 1px solid #404040;
        -moz-border-radius: 10px;
        -webkit-border-radius: 10px;
        text-align: center;
        min-width: 15vw;
        min-height: 3vh;
    }

    .btn {
        -moz-border-radius: 12px !important;
        -webkit-border-radius: 12px !important;
        background-color: #03786e !important;
        color: white !important;
        transition: 0.3s;
    }

        .btn:hover {
            background-color: #00635b !important;
        }

        .btn:active {
            background-color: #00524b !important;
        }

    #forgot-password {
        color: rgb(0, 0, 0) !important;
        opacity: 0.5;
        font-size: 14px !important;
        transition: 0.3s;
    }

    #forgot-password:hover {
        opacity: 0.6;
    }

    #forgot-password:active {
        opacity: 0.75;
    }

    .bg {
        background-image: url('/images/SchoolFront.jpg');
        height: 100%;
        background-position: center;
        background-repeat: no-repeat;
        background-size: cover;
        opacity: .1;
        z-index: -1;
        background-attachment: fixed;
    }

    body {
        margin: 0;
        background-color: #02867b;
    }

</style>

@model Website.Models.User

<meta name="viewport" content="width=device-width, initial-scale=1">
<div class="bg"></div>
<center>
<div class="table">
    <div class="grid-container">

        <div class="table-header">
            <a>PATHWAYS SCHOOL NOIDA</a>
            <div class="error-message">
                <center>@TempData["Error"]</center>
            </div>
        </div>

        <center>
            <div class="panel">
                <div class="login">
                    @using (Html.BeginForm("Login", "Home", FormMethod.Post))
                    {
                        <br />
                        <table>
                            <tr>
                                <td>@Html.EditorFor(m => m.Email, new { htmlAttributes = new { placeholder = "School Email", @class = "roundedcorner" } })</td>
                            </tr>
                            <tr>
                                <td>@Html.EditorFor(m => m.Password, new { htmlAttributes = new { placeholder = "Password", @class = "roundedcorner" } })</td>
                            </tr>
                            <tr>
                                <td><br /><center><input type="submit" value="Login" class="roundedcorner btn" /></center></td>
                            </tr>
                        </table>
                    }
                    <center><a id="forgot-password" href="/Home/SendResetPassword">Forgot Password</a></center></
                </div>
            </div>
        </center>

        <center>
            <div class="panel">
                <div class="register">
                    @using (Html.BeginForm("Register", "Home", FormMethod.Post))
                    {
                        <table>
                            <tr>
                                <td>@Html.EditorFor(m => m.Email, new { htmlAttributes = new { placeholder = "School Email", @class = "roundedcorner" } })</td>
                            </tr>
                            <tr>
                                <td>@Html.EditorFor(m => m.Password, new { htmlAttributes = new { placeholder = "Password", @class = "roundedcorner" } })</td>
                            </tr>
                            <tr>
                                <td><br /><center><input type="submit" value="Register" class="roundedcorner btn" /></center></td>
                            </tr>
                        </table>
                    }
                </div>
            </div>
        </center>

    </div>
</div>
</center>