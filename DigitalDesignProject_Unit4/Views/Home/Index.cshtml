<style>

    @@media screen and (min-width: 1281px) {
        .table {
            width: 50%;
            height: 50%;
        }

        .grid-container {
            grid-template-columns: 1fr 1fr;
            grid-template-rows: 18% 82%;
            grid-template-areas: "header header" "left right";
        }
    }

    @@media screen and (max-width: 1280px) and (min-width:651px) {
        .table {
            width: 60%;
            height: 50%;
        }

        .grid-container {
            grid-template-columns: 1fr 1fr;
            grid-template-rows: 18% 82%;
            grid-template-areas: "header header" "left right";
        }
    }

    @@media screen and (max-width: 650px) {
        .table {
            width: 80%;
            height: 80%;
        }

        .grid-container {
            grid-template-columns: 1fr;
            grid-template-rows: 1fr 3fr 3fr;
            grid-template-areas: "header" "left" "right";
        }
    }

    .table {
        background-color: #03786e;
        bottom: 0;
        left: 0;
        margin: auto;
        position: absolute;
        top: 0;
        right: 0;
    }

    .grid-container {
        width: 100%;
        height: 100%;
        display: grid;
    }

    .table .table-header {
        font-family: Modern;
        color: white !important;
        padding: 2px;
        grid-area: header;
        margin: auto;
        font-size: 30px;
    }

    .login {
        grid-area: left;
    }

    .register {
        grid-area: right;
    }

    .panel {
        background-color: white !important;
        font-family: Modern !important;
        width: 97%;
        height: 97%;
    }

    body {
        background-color: #02867b;
    }
</style>

<meta name="viewport" content="width=device-width, initial-scale=1">

<div class="table">
    <div class="grid-container">

        <div class="table-header">
            <a>PATHWAYS SCHOOL NOIDA</a>
        </div>

        <div class="login">
            <center>
                <div class="panel">
                        <form action="/Home/Login" method="post">
                            <input name="email" type="email" value="" />
                            <input name="password" type="text" value="" />
                            <button action="submit">Login</button>
                        </form>
                </div>
            </center>
        </div>

        <div class="register">
            <center>
                <div class="panel">
                    <form action="/Home/TryRegister" method="post">
                        <input name="email" type="email" value="" />
                        <input name="password" type="text" value="" />
                        <button action="submit">Register</button>
                    </form>
                </div>
            </center>
        </div>

    </div>
</div>